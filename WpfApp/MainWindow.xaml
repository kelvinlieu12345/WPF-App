<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="StackPanelStyle1" TargetType="{x:Type StackPanel}"/>
    </Window.Resources>
    <StackPanel Style="{DynamicResource StackPanelStyle1}">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="36" Width="184"><Run Text="Choose an option"/><LineBreak/><Run/></TextBlock>
        <RadioButton x:Name="btnA" Content="A" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <RadioButton x:Name="btnB" Content="B" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="74"/>

    </StackPanel>
</Window>
